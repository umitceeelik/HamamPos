<Window x:Class="HamamPos.Desktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Giriş" Height="320" Width="420"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Hamam POS" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <TextBox Width="240" Height="32"
               Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
               Margin="0,0,0,6"/>
            <PasswordBox x:Name="Pwd" Width="240" Height="32"
                   PasswordChanged="Pwd_PasswordChanged"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10,0,0">
            <Button Width="240" Height="36"
              Command="{Binding LoginCommand}"
              IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBool}}"
              Content="{Binding IsBusy,
                                Converter={StaticResource BoolToText},
                                ConverterParameter='Bekleyin...|Giriş Yap'}"/>
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Tomato" Margin="0,6,0,0"/>
        </StackPanel>
    </Grid>
</Window>