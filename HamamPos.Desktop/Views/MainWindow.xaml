<Window x:Class="HamamPos.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:HamamPos.Desktop.Converters"
        Title="Hamam POS"
        WindowState="Maximized"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Yerleşik dönüştürücü -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <!-- Bizde zaten var (InverseBoolConverter). Burada XAML tarafında kullanmayacağız; 
             görünürlük için aşağıda Style/DataTrigger ile tersliyoruz. -->
    </Window.Resources>

    <Grid>
        <!-- =========================================================
             1) ODA LİSTESİ GÖRÜNÜMÜ
             ========================================================= -->
        <Grid Margin="16">
            <!-- IsInPos = True ise bu grid gizlensin -->
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsInPos}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding Units}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Width="120" Height="60" Margin="6"
                                    Command="{Binding DataContext.OpenUnitCommand,
                                                      RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}">
                                <TextBlock Text="{Binding Name}" HorizontalAlignment="Center"/>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- =========================================================
             2) POS GÖRÜNÜMÜ (aynı pencere içinde)
             ========================================================= -->
        <Grid Margin="12">
            <!-- IsInPos = True iken görünür; değilken gizli -->
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsInPos}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SOL: ÜRÜN BUTONLARI -->
            <ScrollViewer Margin="0,0,12,0">
                <ItemsControl ItemsSource="{Binding Products}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Width="220" Height="64" Margin="6"
                                    Command="{Binding DataContext.AddItemCommand,
                                                      RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding BasePrice, StringFormat=₺{0:N2}}"
                                               FontSize="11" Opacity="0.7" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- SAĞ: ADİSYON -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Başlık -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Oda:" FontWeight="Bold" Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding SelectedUnit.Name}"/>
                    <TextBlock Text="  |  Adisyon:" FontWeight="Bold" Margin="12,0,6,0"/>
                    <TextBlock Text="{Binding CurrentTicket.Id}"/>
                </StackPanel>

                <!-- Satırlar -->
                <DataGrid Grid.Row="1" AutoGenerateColumns="False"
                          ItemsSource="{Binding CurrentTicket.Items}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Ürün" Binding="{Binding ProductName}"/>
                        <DataGridTextColumn Header="Adet" Binding="{Binding Quantity}"/>
                        <DataGridTextColumn Header="Fiyat"
                                            Binding="{Binding UnitPrice, StringFormat=₺{0:N2}}"/>
                        <DataGridTextColumn Header="Tutar"
                                            Binding="{Binding LineTotal, StringFormat=₺{0:N2}}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Alt bar -->
                <StackPanel Grid.Row="2" Orientation="Horizontal"
                            HorizontalAlignment="Right" Margin="0,8,0,0">
                    <TextBlock Text="{Binding CurrentTicket.Total, StringFormat=Toplam: ₺{0:N2}}"
                               FontWeight="Bold" Margin="0,0,12,0"/>
                    <Button Content="Geri" Margin="0,0,8,0"
                            Command="{Binding BackToUnitsCommand}"/>
                    <Button Content="Nakit" Margin="0,0,6,0"
                            Command="{Binding PayCommand}" CommandParameter="Cash"/>
                    <Button Content="Kart"
                            Command="{Binding PayCommand}" CommandParameter="Card"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>