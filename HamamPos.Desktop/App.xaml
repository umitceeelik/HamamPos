<Application x:Class="HamamPos.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:HamamPos.Desktop.Converters"
             xmlns:vm="clr-namespace:HamamPos.Desktop.ViewModels"
             xmlns:views="clr-namespace:HamamPos.Desktop.Views">

    <Application.Resources>
        <ResourceDictionary>

            <!-- Converters -->
            <conv:BoolToTextConverter        x:Key="BoolToText"/>
            <conv:InverseBoolConverter       x:Key="InverseBool"/>
            <conv:BoolToVisibilityConverter  x:Key="BoolToVisibility"/>
            <!-- Ters görünürlük için ayrı instance -->
            <conv:BoolToVisibilityConverter  x:Key="BoolToVisibility_Invert" Invert="True"/>

            <!-- VM -> View -->
            <DataTemplate DataType="{x:Type vm:LoginViewModel}">
                <views:LoginView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:HomeViewModel}">
                <views:HomeView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:PosViewModel}">
                <views:PosView/>
            </DataTemplate>

            <!-- DİKKAT: ShellWindow eşlemesi kaldırıldı; ShellViewModel'i
           MainWindow zaten DataContext üzerinden ContentControl ile gösteriyor. -->

            <!-- Tüm uygulama genelinde keskin piksel çizimi -->
            <Style TargetType="{x:Type Window}">
                <Setter Property="UseLayoutRounding" Value="True"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            </Style>
            <Style x:Key="FlatButton" TargetType="Button">
                <Setter Property="Margin"    Value="6"/>
                <Setter Property="Padding"   Value="12,8"/>
                <Setter Property="MinWidth"  Value="110"/>
                <Setter Property="MinHeight" Value="40"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="UseLayoutRounding"   Value="True"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
