<Application x:Class="HamamPos.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:HamamPos.Desktop.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <conv:BoolToTextConverter   x:Key="BoolToText"   />
            <conv:InverseBoolConverter  x:Key="InverseBool"  />

            <Style TargetType="Control" x:Key="TopSpacedControl">
                <Setter Property="Margin" Value="0,6,0,0"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
